var continue false
-- wait until STATE_5
while continue == false
    wait 1000
    getGlobal GAME_STATE --> asdfasdf
    if asdfasdf == 5
        var continue true
    endif
wend

setAnimationDirection 0

-- Wait until STATE_10
var continue false
while continue == false
    wait 100
    getGlobal GAME_STATE --> asdfasdf
    if asdfasdf == 10
        var continue true
    endif
wend

wait 1200

-- face up, walk up
setAnimationDirection 0
setVelocity 0 -0.25
moveTileAmount 3

-- face right, walk right
setAnimationDirection 3
setVelocity 0.25 0
moveTileAmount 6

-- face down, walk down
setAnimationDirection 1
setVelocity 0 0.25
moveTileAmount 2




endthread