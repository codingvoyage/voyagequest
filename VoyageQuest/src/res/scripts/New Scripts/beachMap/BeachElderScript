while true == true

    -- move right a bit now
    setAnimationDirection EAST
    setVelocity 0.25 0
    moveTileAmount 3.5
    setAnimationDirection NORTH

    wait 2000

    -- move left a bit now
    setAnimationDirection WEST
    setVelocity -0.25 0
    moveTileAmount 3.5
    setAnimationDirection NORTH

    wait 2000

wend

endthread