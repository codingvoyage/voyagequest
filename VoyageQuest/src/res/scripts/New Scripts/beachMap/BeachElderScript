-- if break is true, then the elder stops going in circles
var break false
var save true

while break == false


    setVelocity 0.5 0
    setAnimationDirection "EAST"
    moveTileAmount 4

    setVelocity 0 0.50
    setAnimationDirection "SOUTH"
    moveTileAmount 3

    setVelocity -0.5 0
    setAnimationDirection "WEST"
    moveTileAmount 4

    setVelocity 0 -0.5
    setAnimationDirection "NORTH"
    moveTileAmount 3


wend

if save == true
    setVelocity 0 -0.5
    setAnimationDirection "NORTH"
    moveTileAmount 4
endif
if save == false

endif


endthread

function [saveElder] doesPlayerWantToSave
    var break true
    var save doesPlayerWantToSave
return