var inMotion false

while true == true
    if inMotion == true
        setAnimationDirection "WEST"
        setVelocity -0.35 0
        moveTileAmount 14
        entitySetLocation 9001 9001
        var inMotion false
    endif
    wait 200
wend

endthread


function [putInLocation] xcoord ycoord
    setThisThreadScriptable "Child"
    entitySetLocation xcoord ycoord
return

function [setInMotion]
    var inMotion true
return