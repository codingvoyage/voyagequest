getGlobal GAME_STATE --> gameState

if gameState < 75
    freezeInputs
    playerMessageBox "I don't need to go there... that would be trespassing too."

    assumeControlOfPlayer

    -- WALK BACK DOWN
    setAnimationDirection 1
    setVelocity 0 0.25
    movePixelAmount 30
    setAnimationDirection 1

    unfreezeInputs
    endthread
endif

if gameState == 75
    mapChange "src/res/CRATEEXPECTATIONS.tmx" 1535 175
endif

if gameState >= 75
    freezeInputs
    playerMessageBox "Oh my God. I swear I will never enter that hell-hole of crates again!! "

    assumeControlOfPlayer

    -- WALK BACK DOWN
    setAnimationDirection 1
    setVelocity 0 0.25
    movePixelAmount 30
    setAnimationDirection 1

    unfreezeInputs
    endthread
endif

endthread