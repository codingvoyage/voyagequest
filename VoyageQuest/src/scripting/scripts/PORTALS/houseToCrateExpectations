getGlobal GAME_STATE --> gameState

if gameState < 75
    freezeInputs
    dialogBox "Sebastian Profile" "I don't need to go there... that would be trespassing too."

    assumeControlOfPlayer
    wait 20

    -- WALK BACK DOWN
    setAnimationDirection 1
    setVelocity 0 0.25
    movePixelAmount 30
    setAnimationDirection 1

    unfreezeInputs
    endthread
endif

if gameState == 75
    mapChange "src/res/CRATEEXPECTATIONS.tmx" 1535 175
endif

if gameState > 75
    freezeInputs
    dialogBox "Sebastian Profile" "Oh my God. I swear I will never enter that hell-hole again!! "

    assumeControlOfPlayer
    wait 20

    -- WALK BACK DOWN
    setAnimationDirection 1
    setVelocity 0 0.25
    movePixelAmount 30
    setAnimationDirection 1

    unfreezeInputs
    endthread
endif

endthread