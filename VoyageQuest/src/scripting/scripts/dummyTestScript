
while true == true
    -- move up a bit now
    setAnimationDirection 0
    setVelocity 0 -0.25
    moveTileAmount 2.5
    setAnimationDirection 1

    -- move right a bit now
    setAnimationDirection 3
    setVelocity 0.25 0
    moveTileAmount 2.5
    setAnimationDirection 1

    -- move down a bit now
    setAnimationDirection 1
    setVelocity 0 0.25
    moveTileAmount 2.5
    setAnimationDirection 0

    -- move left a bit now
    setAnimationDirection 2
    setVelocity -0.25 0
    moveTileAmount 2.5
    setAnimationDirection 1

wend
