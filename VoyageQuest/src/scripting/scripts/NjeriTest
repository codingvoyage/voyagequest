var continue false
while continue == false
    wait 100
    getGlobal GAME_STATE --> asdfasdf
    if asdfasdf == 15
        print "YESSS"
        var continue true
    endif
wend

entitySetLocation 540 1100

while true == true

    -- move right a bit now
    setAnimationDirection 3
    setVelocity 0.25 0
    moveTileAmount 3.5
    setAnimationDirection 0

    wait 2000

    -- move left a bit now
    setAnimationDirection 2
    setVelocity -0.25 0
    moveTileAmount 3.5
    setAnimationDirection 0

    wait 2000

wend
